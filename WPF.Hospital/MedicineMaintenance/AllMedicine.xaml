<Window x:Class="WPF.Hospital.AllMedicine"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF.Hospital"
        mc:Ignorable="d"
        Title="AllMedicine" Height="450" Width="995" WindowStartupLocation="CenterScreen">
    <Grid Margin="20">

        <!-- ROW STRUCTURE -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Title -->
            <RowDefinition Height="Auto"/>
            <!-- Form -->
            <RowDefinition Height="*"/>
            <!-- DataGrid -->
        </Grid.RowDefinitions>

        <!-- ================= TITLE ================= -->
        <TextBlock Text="All Medicine"
               FontSize="22"
               FontWeight="Bold"
               HorizontalAlignment="Center"
               Margin="0,0,0,20"/>

        <!-- ================= INPUT SECTION ================= -->
        <Grid Grid.Row="1" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="74"/>
                <ColumnDefinition Width="213"/>
                <ColumnDefinition Width="153"/>
                <ColumnDefinition Width="118"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <!-- Name -->
            <Label Content="Name:" VerticalAlignment="Center" Height="26"/>
            <TextBox x:Name="txtMedicineName"
                 Grid.Column="1"
                 Margin="5,5,5,5"/>

            <!-- Brand -->
            <Label Content="Brand:"
               Grid.Column="2"
               VerticalAlignment="Center" Height="26"/>
            <TextBox x:Name="txtMedicineBrand"
                 Grid.Column="2"
                 Margin="60,5,10,5" Grid.ColumnSpan="2"/>

            <!-- Buttons -->
            <StackPanel Grid.Column="4"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center" Width="314">

                <Button x:Name="btnAddMedicine"
                    Content="Add"
                    Width="80"
                    Margin="5,5,20,5" Click="btnAddMedicine_Click"/>

                <Button x:Name="btnUpdateMedicine"
                    Content="Update"
                    Width="80"
                    Margin="5,5,20,5" Click="btnUpdateMedicine_Click"/>

                <Button x:Name="btnDeleteMedicine"
                    Content="Delete"
                    Width="80"
                    Margin="5,5,20,5" Click="btnDeleteMedicine_Click"/>
            </StackPanel>
        </Grid>

        <!-- ================= DATAGRID ================= -->
        <DataGrid x:Name="dgMedicines"
              Grid.Row="2"
              AutoGenerateColumns="False"
              SelectionMode="Single"
              IsReadOnly="True"
              Margin="0,10,0,0"
              SelectionChanged="dgMedicines_SelectionChanged">

            <DataGrid.Columns>
                <DataGridTextColumn Header="ID"
                                Binding="{Binding Id}"
                                Width="80"/>
                <DataGridTextColumn Header="Name"
                                Binding="{Binding Name}"
                                Width="*"/>
                <DataGridTextColumn Header="Brand"
                                Binding="{Binding Brand}"
                                Width="*"/>
            </DataGrid.Columns>

        </DataGrid>

    </Grid>
</Window>
