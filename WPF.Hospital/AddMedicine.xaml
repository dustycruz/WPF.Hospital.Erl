<Window x:Class="WPF.Hospital.AddMedicine"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF.Hospital"
        mc:Ignorable="d"
        Title="AddMedicine" Height="250" Width="500" WindowStartupLocation="CenterScreen">
    <Grid Margin="5">
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="223"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Label Content="Add New Medicine" FontWeight="Bold" FontSize="16" Grid.ColumnSpan="2" />

        <!-- Medicine Name -->
        <Label Content="Medicine Name" Grid.Row="1" VerticalAlignment="Center" Height="26"/>
        <TextBox x:Name="txtMedicineName" Grid.Row="1" Grid.Column="1" Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}" />

        <!-- Medicine Brand -->
        <Label Content="Brand" Grid.Row="2" VerticalAlignment="Center" Height="26"/>
        <TextBox x:Name="txtBrand" Grid.Row="2" Grid.Column="1" Text="{Binding Brand, UpdateSourceTrigger=PropertyChanged}" />

        <Button x:Name="btnAddMedicine" Grid.Row="3" Margin="2,4,2,0" Content="Add Medicine" Click="btnAddMedicine_Click" Grid.ColumnSpan="2"/>
    </Grid>
</Window>
