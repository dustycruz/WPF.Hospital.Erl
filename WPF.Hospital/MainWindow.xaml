<Window x:Class="WPF.Hospital.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF.Hospital"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"></RowDefinition>
            <RowDefinition Height="20"></RowDefinition>
            <RowDefinition Height="35"></RowDefinition>
            <RowDefinition Height="80"></RowDefinition>
            <RowDefinition Height="35"></RowDefinition>
            <RowDefinition Height="80"></RowDefinition>
            <RowDefinition Height="35"></RowDefinition>
            <RowDefinition Height="80"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100"></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Image Source="/hospital.jpg" ></Image>
            <Rectangle Grid.Column="1" Fill="#FFFFE600"/>
            <TextBlock Text="UAC Medical Center" Grid.Column="1" VerticalAlignment="Center" FontSize="36" FontWeight="Bold" FontFamily="Arial" Padding="10,0,0,0"></TextBlock>
        </Grid>
        <Menu Grid.Row="1">
            <MenuItem Header="Patient">
                <MenuItem Header="Add Patient"></MenuItem>
            </MenuItem>
            <MenuItem Header="Medicine">
                <MenuItem Header="Add Patient"></MenuItem>
            </MenuItem>
            <MenuItem Header="Doctors">
                <MenuItem Header="Add Doctor"></MenuItem>
            </MenuItem>
        </Menu>
        <Label Grid.Row="2" Margin="2" Content="Patient Maintenance" FontSize="16" FontWeight="Bold"></Label>
        <StackPanel Margin="5" Orientation="Horizontal" Grid.Row="3">
            <StackPanel.Resources>
                <Style TargetType="Button">
                    <Setter Property="Margin" Value="5"></Setter>
                    <Setter Property="Padding" Value="10"></Setter>
                    <Setter Property="BorderThickness"  Value="0"></Setter>
                </Style>
            </StackPanel.Resources>
            <Button x:Name="btnAddPatient" Content="Add Patient" Click="btnAddPatient_Click"></Button>
            <Button Content="Delete Patient"></Button>
            <Button x:Name="btnAllPatients" Content="All Patients" Click="btnAllPatients_Click"></Button>
        </StackPanel>
        <Label Grid.Row="4" Margin="2" Content="Medicine Maintenance" FontSize="16" FontWeight="Bold"></Label>
        <StackPanel Margin="5" Orientation="Horizontal" Grid.Row="5">
            <StackPanel.Resources>
                <Style TargetType="Button">
                    <Setter Property="Margin" Value="5"></Setter>
                    <Setter Property="Padding" Value="10"></Setter>
                    <Setter Property="BorderThickness"  Value="0"></Setter>
                </Style>
            </StackPanel.Resources>
            <Button x:Name="btnAddMedicine" Content="Add Add Medicine"></Button>
            <Button Content="Delete Medicine"></Button>
            <Button x:Name="btnAllMedicine" Content="All Medicine"></Button>
        </StackPanel>
        <Label Grid.Row="6" Margin="2" Content="Doctor Maintenance" FontSize="16" FontWeight="Bold"></Label>
        <StackPanel Margin="5" Orientation="Horizontal" Grid.Row="7">
            <StackPanel.Resources>
                <Style TargetType="Button">
                    <Setter Property="Margin" Value="5"></Setter>
                    <Setter Property="Padding" Value="10"></Setter>
                    <Setter Property="BorderThickness"  Value="0"></Setter>
                </Style>
            </StackPanel.Resources>
            <Button x:Name="btnAddDoctor" Content="Add Doctor"></Button>
            <Button Content="Delete Doctor"></Button>
            <Button x:Name="btnAllDoctor" Content="All Doctors"></Button>
        </StackPanel>
    </Grid>
</Window>
