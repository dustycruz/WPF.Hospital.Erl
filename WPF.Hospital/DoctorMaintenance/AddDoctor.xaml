<Window x:Class="WPF.Hospital.AddDoctor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF.Hospital"
        mc:Ignorable="d"
        Title="AddDoctor" Height="270" Width="450" WindowStartupLocation="CenterScreen">
    <Grid Margin="8">
        <!-- Row Definitions -->
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <Label Grid.Row="0" Content="Add New Doctor" FontWeight="Bold" FontSize="16" HorizontalAlignment="Center" Margin="0,10"/>

        <!-- Form Fields -->
        <StackPanel Grid.Row="1" Margin="0,10">
            <!-- First Name -->
            <StackPanel Orientation="Horizontal" Margin="0,10">
                <TextBlock VerticalAlignment="Center" Width="100" Text="First Name:" FontWeight="Bold"/>
                <TextBox x:Name="txtFirstName" Width="250" Padding="5" BorderBrush="Gray" BorderThickness="1" Margin="10,0" />
            </StackPanel>

            <!-- Last Name -->
            <StackPanel Orientation="Horizontal" Margin="0,10">
                <TextBlock VerticalAlignment="Center" Width="100" Text="Last Name:" FontWeight="Bold"/>
                <TextBox x:Name="txtLastName" Width="250" Padding="5" BorderBrush="Gray" BorderThickness="1" Margin="10,0" />
            </StackPanel>

            <!-- Add Doctor Button -->
            <Button x:Name="btnAddDoctor" Content="Add Doctor" Width="438" HorizontalAlignment="Center" Margin="0,20" Padding="5" Click="btnAddDoctor_Click" Background="#4CAF50" Foreground="White" FontWeight="Bold"/>
        </StackPanel>
    </Grid>
</Window>
